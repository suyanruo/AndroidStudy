<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg_gray" >

    <EditText
        android:id="@+id/et_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50" />

    <Button
        android:id="@+id/btn_enable_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_keyboard"
        android:layout_alignParentEnd="true"
        android:text="@string/disable_dot"
        android:textAllCaps="false"/>

    <com.example.zj.androidstudy.keyboard.NumericKeyboardView
        android:id="@+id/numeric_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:dot_availability="true" />
</RelativeLayout>